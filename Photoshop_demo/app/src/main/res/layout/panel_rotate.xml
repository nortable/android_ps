<?xml version="1.0" encoding="utf-8"?>
<!-- 旋转面板 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rotate_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1A1A1A"
    android:visibility="gone">
    
    <!-- 标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>
    
    <!-- 旋转选项 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <LinearLayout
            android:id="@+id/btn_rotate_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_button_dark_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↶"
                android:textColor="@color/white"
                android:textSize="32sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左转90°"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/btn_rotate_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_button_dark_bg"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↷"
                android:textColor="@color/white"
                android:textSize="32sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右转90°"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 翻转选项 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        
        <LinearLayout
            android:id="@+id/btn_flip_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_button_dark_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⇄"
                android:textColor="@color/white"
                android:textSize="32sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水平翻转"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/btn_flip_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:background="@drawable/rounded_button_dark_bg"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⇅"
                android:textColor="@color/white"
                android:textSize="32sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="垂直翻转"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 关闭按钮 -->
    <Button
        android:id="@+id/btn_rotate_close"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="完成"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="#FFD700"/>
    
</LinearLayout>

