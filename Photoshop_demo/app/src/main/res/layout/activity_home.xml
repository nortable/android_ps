<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 用户状态栏（顶部独立） -->
    <LinearLayout
        android:id="@+id/layout_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/text_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/view_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_button_bg" />
    </LinearLayout>

    <!-- 顶部圣诞主题横幅 -->
    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layout_user_status"
        android:background="@color/christmas_red"
        android:padding="20dp">

        <TextView
            android:id="@+id/banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让这个圣诞，拼出彩"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/banner_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner_title"
            android:text="全新拼图功能，留下每一个高光时刻"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/banner_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner_subtitle"
            android:layout_marginTop="16dp"
            android:text="立即查看"
            android:backgroundTint="@color/button_pink"
            android:textColor="@color/dark_text"/>

        <!-- 右侧装饰图片占位 -->
        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/white_transparent"/>

    </RelativeLayout>

    <!-- 三个圆形功能按钮 -->
    <LinearLayout
        android:id="@+id/function_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_container"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="40dp">

        <!-- 图片编辑 -->
        <LinearLayout
            android:id="@+id/btn_edit_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_button_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片编辑"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 拍照 -->
        <LinearLayout
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_button_purple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 拼图 -->
        <LinearLayout
            android:id="@+id/btn_collage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_button_orange"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼图"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 项目标签栏 -->
    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/function_buttons"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tab_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- 添加新项目按钮 -->
        <TextView
            android:id="@+id/btn_add_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- 项目列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/projects_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_container"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

</RelativeLayout>

