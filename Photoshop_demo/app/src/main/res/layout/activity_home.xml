<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 顶部圣诞主题横幅 -->
    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/christmas_red"
        android:padding="20dp">

        <TextView
            android:id="@+id/banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让这个圣诞，拼出彩"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/banner_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner_title"
            android:text="全新拼图功能，留下每一个高光时刻"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/banner_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/banner_subtitle"
            android:layout_marginTop="16dp"
            android:text="立即查看"
            android:backgroundTint="@color/button_pink"
            android:textColor="@color/dark_text"/>

        <!-- 右侧装饰图片占位 -->
        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/white_transparent"/>

    </RelativeLayout>

    <!-- 四个圆形功能按钮 -->
    <LinearLayout
        android:id="@+id/function_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_container"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp">

        <!-- AI追色 -->
        <LinearLayout
            android:id="@+id/btn_ai_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI追色"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 相机模拟 -->
        <LinearLayout
            android:id="@+id/btn_camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相机模拟"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 特效 -->
        <LinearLayout
            android:id="@+id/btn_effects"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特效"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 拼图 -->
        <LinearLayout
            android:id="@+id/btn_collage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_button_bg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼图"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 照片/项目标签栏 -->
    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/function_buttons"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/tab_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/tab_projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目"
            android:textColor="@color/gray_text"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <!-- 筛选和排序图标 -->
        <TextView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚑"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/btn_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↕"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <!-- 日期标题 -->
    <TextView
        android:id="@+id/date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_container"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="2025年12月24日"
        android:textColor="@color/gray_text"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_container"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="5"
        android:textColor="@color/gray_text"
        android:textSize="14sp"/>

    <!-- 照片网格 -->
    <GridView
        android:id="@+id/photos_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_title"
        android:layout_marginTop="16dp"
        android:numColumns="2"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:padding="2dp"/>

</RelativeLayout>

